<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="#ff0000"
        android:id="@+id/iv_imgView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


    <RelativeLayout
        android:layout_alignBottom="@+id/iv_imgView"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_likeView"
            android:background="#ff00"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />

        <TextView
            android:paddingLeft="16dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_countView"
            android:layout_toRightOf="@+id/iv_likeView"
            android:text="123"
            android:maxLength="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_shareView"
            android:layout_alignParentRight="true"
            android:background="#ff00"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6D36C4"
            android:text="yoonjh238" />

        <TextView
            android:id="@+id/tv_posttext"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12345" />


    </LinearLayout>


</LinearLayout>