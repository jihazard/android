<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_imgView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFBABA"/>

    <RelativeLayout
        android:padding="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_likeView"
            android:background="#ff0000"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:layout_toRightOf="@+id/iv_likeView"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12324"/>

        <ImageView
            android:id="@+id/iv_shareView"
            android:background="#698ACC"
            android:layout_alignParentRight="true"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </RelativeLayout>

    <LinearLayout
        android:padding="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_username"
            android:maxLength="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yoonjh238"/>

        <TextView
            android:id="@+id/tv_postText"
            android:paddingLeft="16dp"
            android:maxLength="80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아녕하세요"/>

    </LinearLayout>

</LinearLayout>